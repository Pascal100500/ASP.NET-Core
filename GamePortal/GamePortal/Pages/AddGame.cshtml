@page
@model AddGameModel
@{
    ViewData["Title"] = "Добавить игру";
}

<h2>Добавление игры</h2>

<div class="form-container">
    <form method="post">

        <div class="form-group">
            <label asp-for="Game.Title"></label>
            <input asp-for="Game.Title" />
            <span asp-validation-for="Game.Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Game.ShortDescription"></label>
            <textarea asp-for="Game.ShortDescription"></textarea>
            <span asp-validation-for="Game.ShortDescription"></span>
        </div>

        <div class="form-group">
            <label asp-for="Game.FullDescription"></label>
            <textarea asp-for="Game.FullDescription"></textarea>
            <span asp-validation-for="Game.FullDescription"></span>
        </div>

        <div class="form-group">
            <label asp-for="Game.Price"></label>
            <input asp-for="Game.Price" type="number" step="0.01" min="0" />
            <span asp-validation-for="Game.Price"></span>
        </div>

        <div class="form-group">
            <label asp-for="Game.AgeLimit"></label>
            <input asp-for="Game.AgeLimit" type="number" min="3" max="18" />
            <span asp-validation-for="Game.AgeLimit"></span>
        </div>

        <div class="form-group">
            <label asp-for="Game.ImageUrl"></label>
            <input asp-for="Game.ImageUrl" />
        </div>

        <div class="form-group">
            <label asp-for="Game.Screenshot1"></label>
            <input asp-for="Game.Screenshot1" />
        </div>

        <div class="form-group">
            <label asp-for="Game.Screenshot2"></label>
            <input asp-for="Game.Screenshot2" />
        </div>

        <div class="form-group">
            <label asp-for="Game.Screenshot3"></label>
            <input asp-for="Game.Screenshot3" />
        </div>

        <div class="form-group checkbox-group">
            <input asp-for="Game.IsOnSale" />
            <label asp-for="Game.IsOnSale">Игра участвует в распродаже</label>
        </div>

        <div class="form-group checkbox-group">
            <input asp-for="Game.IsTopGame" />
            <label asp-for="Game.IsTopGame">Добавить в ТОП</label>
        </div>

        <button type="submit" class="btn-submit">
            Сохранить игру
        </button>

    </form>
</div>